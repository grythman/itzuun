{
  "info": {
    "name": "Itzuun MVP API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Request OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/auth/request-otp",
            "body": {"mode": "raw", "raw": "{\"email\": \"a@b.com\"}"}
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/auth/verify-otp",
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"a@b.com\", \"otp\": \"123456\", \"otp_token\": \"...\"}"
            }
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/auth/refresh",
            "body": {"mode": "raw", "raw": "{\"refresh\": \"...\"}"}
          }
        },
        {
          "name": "Me",
          "request": {"method": "GET", "url": "{{baseUrl}}/api/v1/me"}
        },
        {
          "name": "Update Me",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/me",
            "body": {"mode": "raw", "raw": "{\"role\": \"client\"}"}
          }
        }
      ]
    },
    {
