    {
      "name": "Admin",
      "item": [
        {"name": "Users", "request": {"method": "GET", "url": "{{baseUrl}}/api/v1/admin/users?verified=false"}},
        {"name": "Verify User", "request": {"method": "POST", "url": "{{baseUrl}}/api/v1/admin/users/1/verify"}},
